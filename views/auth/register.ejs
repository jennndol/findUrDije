<!DOCTYPE html>
<html>

<head>
  <% include ../partials/head %>
    <title>
      <%= title %>
    </title>
</head>

<body class="full-screen login">
  <% include ../partials/nav-register %>
    <div class="wrapper">
      <div class="page-header" style="background-image: url('../assets/img/sections/bruno-abatti.jpg');">
        <div class="container">
          <div class="row">
            <div class="col-md-4 col-sm-6 ml-auto mr-auto">
              <div class="card card-register">
                <h3 class="card-title">Register</h3>
                <br>
                <form action="/auth/register" method="post" class="register-form">
                  <input type="text" class="form-control" name="username" placeholder="username"><br>
                  <input type="text" class="form-control" name="email" placeholder="email"><br>
                  <input type="password" class="form-control" name="password" placeholder="password"><br>
                  <p>Sign up as :</p>
                  <% types.forEach(type => { %>
                    <% if (type.name == 'DJ') { %>
                      <div class="form-check-radio">
                        <label class="form-check-label">
                              <input type="radio" class="form-check-input" name="TypeId" value="<%= type.id %>">
                              <%= type.name %>
                              <span class="form-check-sign"></span>
                          </label>
                      </div>
                      <% } else { %>
                        <div class="form-check-radio">
                          <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="TypeId" value="<%= type.id %>" checked>
                                <%= type.name %>
                                  <span class="form-check-sign"></span>
                              </label>
                        </div>
                        <% } %>
                          <% }); %>
                            <button type="submit" class="btn btn-block btn-round">Register</button>
                </form>
                <div class="login">
                  <p>Already have an account? <a href="#0">Log in</a>.</p>
                </div>
              </div>
            </div>
          </div>
          <% include ../partials/footer %>
        </div>
      </div>
    </div>
</body>
<% include ../partials/scripts %>

</html>
